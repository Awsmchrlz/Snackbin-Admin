<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/publiccss.css" type="text/css" />
  <link rel="stylesheet" href="/css/{{style}}" type="text/css" />
  <title>Snackbin</title>
</head>

<body>
  {{{body}}}
  {{!-- suprise modal --}}

  <div class="modal" id="supriseModal">
    <div class="header">
      <h3>Suprise Me</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
      <br>
      <br>
      <div>Generate an order for you...</div>
     
      <br>
      <br>
      <div id="generateRandom">Generate</div>
    </div>
  </div>
  <div class="modal" id="info">
    <div class="header">
      <h3>Info</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
      <div></div>
      <span></span>
    </div>
  </div>

  <div class="modal" id="setupSeller">
    <div class="header">
      <h3>Create Seller Profile</h3>
      <span class="closeButton">&times;</span>
    </div>
    <h5></h5>
    <h4></h4>
    <div class="modalContent">
      <input type="text" placeholder="Seller Name" id="sellerName">
      <input type="text" placeholder="Location/Pick-Up" id="sellerLocation">
      <input type="text" placeholder="Phone Number" id="sellerNumber">
      <div id="createSeller">Create Account</div>
    </div>
  </div>


  <div class="modal" id="orderNotes">
    <div class="header">
      <h3>Add notes to your order</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
      <textarea name="orderNotes" id="notes" cols="30" rows="10" placeholder="add notes(max 40words)"></textarea>
      <div id="saveOrderNotes"> Save Notes</div>
    </div>
  </div>

  <div class="modal" id="paymentModal">
    <div class="header">
      <h3>Checkout</h3>
       <span class="closeButton">&times;</span>
    </div>
    <h5></h5>
    <h4></h4>
    <div class="modalContent">
   
      <div class="optionsContainer">
      </div>
    
      <div class="orderContainer">

      </div>
      <div class="totalBill">

      </div>

     {{!-- <div class="deliveryPeople"> --}}
      {{!-- {{#each deliveryPersons}}
        <div class="cartItem deliveryPerson" id="{{_id}}" data-userName="{{userName}}" data-userName="{{deliveryCharge}}">
          <div class="itemData">
            <p>{{userName}}, {{phoneNumber}}</p>
                <p>From {{userAddress}}</p>
          </div>
        </div>
    {{/each}} --}}
     {{!-- </div> --}}
     
        <div>Enter your delivery location.</div>
        
          <input id="deliveryAddress" type="text" name="deliveryAddress" placeholder="Room number or Location">
        
      
      <button id="confirmPayment" style="margin-top:10px;">
        ConfirmPayment
      </button>
    </div>
  </div>


  <section class="screen" id="cartButton">
    <div class="navTop">
      <div>
        <object data="/css/svg/back.svg" type="image/svg+xml"></object>
        <div class="homeButton"></div>
      </div>
      <div>Cart screen</div>
    </div>
    <div class="medNav">
      <div id="cartQty">0 items</div>
      <div id="clearCart">clear</div>
    </div>
    <div class="cartList">

    </div>
    <div id="cartCosts">
      <div class="modalButton" id="orderNotes">click to add order notes 📝</div>
    <br>
      <div class="deliveryCost">
        <div class="text"> Delivery Cost</div>
    
        <div class="qty"></div>
      </div>
      <div class="tip modalButton" id="tip">
        <div class="text"> Tip(&plus;)👐</div>
        <div>add tip</div>
        <div class="qty">-</div>
      </div>
      <div class="orderBill">
        <div class="text"> Bill📃</div>
        <div class="qty">-</div>
      </div>
      <div class="totalCost">
        <div class="text"> Total💰</div>
        <div class="qty"></div>
      </div>
      <div class="modalButton" id="paymentModal">Set Up Delivery</div>
    </div>
  </section>

  <div class="modal" id="getRecom">
    <div class="header">
      <h3>we'll recommend something (coming really soon)</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
      <div class="tagSection">
        <h4>hungry?</h4>
        <div class="tagContainer" id="hungerLevel">
          <div class="tagOption" id="hungerLow">
            low key😉
          </div>
          <div class="tagOption" id="hungerMild">
            mild😄
          </div>
          <div class="tagOption" id="hungerMid">
            need a decent meal😅
          </div>
          <div class="tagOption" id="hungerHigh">
            I could eat a cow🤤
          </div>
        </div>
      </div>

      <div class="tagSection">
        <h4>Taste?</h4>
        <div class="tagContainer" id="tasteLevel">
          <div class="tagOption" id="tasteSweet">
            somethin sweet🍩
          </div>
          <div class="tagOption" id="tasteMeaty">
            something meaty🍖
          </div>
          <div class="tagOption" id="tasteFullCourse">
            full course 🍛
          </div>
          <div class="tagOption" id="tasteAnything">
            anything...
          </div>
        </div>
      </div>
      <div class="tagSection">
        <h4>Thirsty?</h4>
        <div class="tagContainer" id="thirstLevel">
          <div class="tagOption" id="drinkNone">
            no beverage
          </div>
          <div class="tagOption" id="drinkCarbonatedDrink">
            carbonated drink🥤
          </div>
          <div class="tagOption" id="drinkFruitDrink">
            fruit flavored🧃
          </div>
          <div class="tagOption" id="drinkAnything">
            anything
          </div>
        </div>
      </div>
      {{!-- <div class="tagSection">
        <h4>Budget</h4>
        <div class="tagContainer" id="priceLevel">
          <div class="tagOption" id="budgetLowest">
            lowest possible
          </div>
          <div class="tagOption" id="budgetUnder30">
            under k30💵
          </div>
          <div class="tagOption" id="budgetUnder50">
            under k50💸
          </div>
          <div class="tagOption" id="budgetUnder100">
            under k100💰
          </div>
          <div class="tagOption" id="budgetNoLimit">
            no limit💼
          </div>
        </div>
      </div> --}}
      <button id="getRecommendationBtn">
        Get Suggestion
      </button>
    </div>
  </div>

  <div class="modal" id="tip">
    <div class="header">
      <h3>Add a tip (k)</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
      <input type="number" name="" id="tipFee" placeholder="add tip amount (k)"
        style="text-align: center; margin-bottom:15px;">
      <button id="saveTip">Save tip</button>
    </div>
  </div>


  <div class="modal" id="notiModal">
    <div class="header">
      <h3>Notification</h3>
      <span class="closeButton">&times;</span>
    </div>
    <div class="modalContent">
    </div>
  </div>


  <div class="modal" id="loaderModal">
    <div class="modalContent">
      <div class="spinnerContainer">
        <div class="spinner">
          <div class="spinnerSection">🥪</div>
        </div>
        <div class="spinner">
          <div class="spinnerSection">🍗</div>
        </div>
        <div class="spinner">
          <div class="spinnerSection">🥤</div>
        </div>
    </div>
  </div>
  </div>


  <div class="modal" id="imageModal">
<div>
  <span class="closeButton">&times;</span>
</div>
    <div class="imageHolder" style="position: relative; min-height:150px;">
      <img src="" alt="🤕unavailable">
    </div>
    <div class="imgNav">
      <button  id="prevImg">prev</button>
      <button id="nextImg">next</button>
    </div>
  </div>

  
  <div class="modal" id="confirmPaymentModal">

    <div class="header">
      <h3>Confirm Payment</h3>
      <span class="closeButton">&times;</span>
    </div>
  <div class="modalContent">

  </div>
  </div>

  <div class="overLay"></div>
</body>



<script  defer src="/js/publicTs.js"></script>
<script defer src="/js/{{script}}.js"></script>

</html>

